# =============================================================================
# Global CONFIGURATION
# =============================================================================

# Project
GLOBAL_PROJECT_NAME=homelab
TZ=Asia/Kolkata

# User/Group IDs
PUID=1000
PGID=1000

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Root domain (registered domain)
DOMAIN_ROOT=offhourlab.dev

# Subdomains for different planes
CLOUD_SUBDOMAIN=cloud
HOME_SUBDOMAIN=home

# App plane names for data paths

CLOUD_PLANE_NAME=cloud
HOME_PLANE_NAME=home

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Docker network names
EDGE_NETWORK=edge
SERVICE_NETWORK=service

# =============================================================================
# PATH CONFIGURATION
# =============================================================================

# Root directory paths (parameterized for flexibility)
HOMELAB_ROOT=/home/${USER}/${GLOBAL_PROJECT_NAME}
DATA_ROOT=${HOMELAB_ROOT}/data
LOGS_ROOT=${HOMELAB_ROOT}/logs
SERVICES_ROOT=${HOMELAB_ROOT}/services
SECRETS_ROOT=${HOMELAB_ROOT}/secrets
SCRIPTS_ROOT=${HOMELAB_ROOT}/scripts
DOCS_ROOT=${HOMELAB_ROOT}/docs
SHARED_ROOT=${HOMELAB_ROOT}/shared

# Cloud application paths
CLOUD_APP_DATA_ROOT=${DATA_ROOT}/${CLOUD_PLANE_NAME}
CLOUD_APP_LOGS_ROOT=${LOGS_ROOT}/${CLOUD_PLANE_NAME}
CLOUD_APP_SECRETS_ROOT=${SECRETS_ROOT}/${CLOUD_PLANE_NAME}
CLOUD_APP_SERVICES_ROOT=${SERVICES_ROOT}/${CLOUD_PLANE_NAME}

# Home application paths
HOME_APP_DATA_ROOT=${DATA_ROOT}/${HOME_PLANE_NAME}
HOME_APP_LOGS_ROOT=${LOGS_ROOT}/${HOME_PLANE_NAME}
HOME_APP_SECRETS_ROOT=${SECRETS_ROOT}/${HOME_PLANE_NAME}
HOME_APP_SERVICES_ROOT=${SERVICES_ROOT}/${HOME_PLANE_NAME}