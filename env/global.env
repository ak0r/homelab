# =============================================================================
# Global CONFIGURATION
# =============================================================================

# Project
GLOBAL_PROJECT_NAME=homelab
TZ=Asia/Kolkata

# User/Group IDs
PUID=1000
PGID=1000

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Root domain (registered domain)
DOMAIN_ROOT=offhourlab.dev

# Subdomains for different planes
CLOUD_SUBDOMAIN=cloud
HOME_SUBDOMAIN=home

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Docker network names
EDGE_NETWORK=edge
SERVICE_NETWORK=service

# =============================================================================
# PATH CONFIGURATION
# =============================================================================

# Root directory paths (parameterized for flexibility)
HOMELAB_ROOT=/home/${USER}/${GLOBAL_PROJECT_NAME}
DATA_ROOT=${HOMELAB_ROOT}/data
LOGS_ROOT=${HOMELAB_ROOT}/logs
SERVICES_ROOT=${HOMELAB_ROOT}/services
SECRETS_ROOT=${HOMELAB_ROOT}/secrets
SCRIPTS_ROOT=${HOMELAB_ROOT}/scripts
DOCS_ROOT=${HOMELAB_ROOT}/docs
SHARED_ROOT=${HOMELAB_ROOT}/shared

# Cloud application paths
CLOUD_APP_DATA_ROOT=${DATA_ROOT}/cloud
CLOUD_APP_LOGS_ROOT=${LOGS_ROOT}/cloud
CLOUD_APP_SECRETS_ROOT=${SECRETS_ROOT}/cloud
CLOUD_APP_SERVICES_ROOT=${SERVICES_ROOT}/cloud

# Home application paths
HOME_APP_DATA_ROOT=${DATA_ROOT}/home
HOME_APP_LOGS_ROOT=${LOGS_ROOT}/home
HOME_APP_SECRETS_ROOT=${SECRETS_ROOT}/home
HOME_APP_SERVICES_ROOT=${SERVICES_ROOT}/home